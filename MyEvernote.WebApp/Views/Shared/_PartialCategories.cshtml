@using MyEvernote.BusinessLayer
@using MyEvernote.Entities

@{
    CategoryManager categoryManager = new CategoryManager();
    List<Category> categoryList = categoryManager.List();
}


<p class="lead">Kategoriler</p>
<div class="list-group">
    @*<a href="/Home/Index" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> Tümü</a>*@  
    <a href="@Url.Action("Index","Home")" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> Tümü</a>
    @foreach (var category in categoryList)
    {
        <a href="/Home/ByCategory/@category.Id" title="@category.Description" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>@category.Title</a>
    }
</div>
