}

<link href="~/Content/login-register.css" rel="stylesheet" />


<section class="login-info">
    <div class="container">
        <div class="row main">
            <div class="form-header">
                <h1 class="text-center ">Kayıt Bilgilendirme </h1>
            </div>
            <div class="main-content">
